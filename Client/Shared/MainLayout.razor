@inherits LayoutComponentBase

<MudThemeProvider Theme="@_theme" @bind-IsDarkMode="@_darkMode"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle"/>
        <MudText>My Application</MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Filled.LightMode" OnClick="@(() => _darkMode = !_darkMode)"/>
        </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/" Match="@NavLinkMatch.All">Home</MudNavLink>
            <MudNavLink Href="/Table/success">Table(Success)</MudNavLink>
            <MudNavLink Href="/Table/warning">Table(Warning)</MudNavLink>
            <MudNavLink Href="/Table/fail">Table(Fail)</MudNavLink>
            <MudNavLink Href="/Table/info">Table(Info)</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="@MaxWidth.False" Class="pt-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    readonly MudTheme _theme = new()
    {
        LayoutProperties = new LayoutProperties
        {
            AppbarHeight = "45px",
            DrawerWidthLeft = "150px"
        }
    };

    private bool _darkMode;
}